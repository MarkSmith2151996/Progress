{
  "name": "progress-tracker",
  "version": "0.1.0",
  "private": true,
  "main": "main/background.js",
  "scripts": {
    "dev": "node scripts/dev-with-ip.js",
    "dev:basic": "node node_modules/next/dist/bin/next dev",
    "build": "node node_modules/next/dist/bin/next build",
    "start": "node node_modules/next/dist/bin/next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "electron:dev": "npm run build:electron && concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:next && npm run build:electron && electron-builder",
    "build:next": "set ELECTRON_BUILD=true && next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "setup": "node scripts/setup-credentials.js",
    "desktop:build": "set ELECTRON_BUILD=true && next build && npm run build:electron && npm run desktop:prepare && electron-builder",
    "desktop:prepare": "node scripts/prepare-standalone.js",
    "desktop:run": "electron ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@types/styled-components": "^5.1.36",
    "date-fns": "^3.6.0",
    "googleapis": "^140.0.0",
    "next": "14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react95": "^4.0.0",
    "styled-components": "^6.3.8",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-serve": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.2.0",
    "nextron": "^9.5.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
